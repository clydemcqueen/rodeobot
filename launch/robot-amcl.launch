<launch>

  <!-- Latch cmd_vel commands for 5s to compensate for flaky wifi (only for teleop) -->
  <param name="/ca_driver/latch_cmd_duration" value="5" />

  <!-- Launch Create2 base nodes; this also provides an URDF file -->
  <include file="$(find ca_driver)/launch/create_2.launch" />

  <!-- Launch RealSense camera nodes -->
  <include file="$(find realsense_camera)/launch/r200_nodelet_rgbd.launch" />

  <!-- Static transform to link base to camera; TODO replace this with URDF mods -->
  <node name="base2camera" pkg="tf" type="static_transform_publisher" args="-0.005 0 0.165 0 0 0 base_link camera_link 100" />

  <!-- Static transform to link base_footprint and base_link; TODO figure out the URDF bug -->
  <node name="footprint2link" pkg="tf" type="static_transform_publisher" args="0 0 0.017 0 0 0 base_footprint base_link 100" />

  <!-- Simulate a laser scanner -->
  <node name="cloud2scan" pkg="depthimage_to_laserscan" type="depthimage_to_laserscan">
    <remap from="image" to="camera/depth/image_rect" />
    <param name="~scan_height" value="20" />
    <param name="~output_frame_id" value="camera_link" /> <!-- Important! -->
  </node>

  <!-- Monitor the battery -->
  <node name="battery_monitor" pkg="rodeobot" type="battery_monitor" output="screen" />

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="/home/clyde/catkin_ws/maps/big.yaml"/>

  <!--- Run AMCL -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">

    <!-- These are defaults: -->
    <param name="max_particles" value="5000"/>
    <param name="kld_z" value="0.99"/>
    <param name="update_min_d" value="0.2"/>
    <param name="transform_tolerance" value="0.1"/>
    <param name="recovery_alpha_slow" value="0.0"/>
    <param name="recovery_alpha_fast" value="0.0"/>

    <param name="laser_max_beams" value="30"/>
    <param name="laser_z_max" value="0.05"/>
    <param name="laser_sigma_hit" value="0.2"/>
    <param name="laser_lambda_short" value="0.1"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>
    <param name="laser_model_type" value="likelihood_field"/>

    <param name="odom_model_type" value="diff"/>
    <param name="odom_alpha1" value="0.2"/>
    <param name="odom_alpha2" value="0.2"/>
    <param name="odom_alpha4" value="0.2"/>
    <param name="odom_frame_id" value="odom"/>

    <!-- Override defaults -->
    <param name="min_particles" value="500"/>
    <param name="kld_err" value="0.05"/>
    <param name="update_min_a" value="0.25"/>
    <param name="resample_interval" value="1"/>
    <param name="gui_publish_rate" value="10.0"/>
    <param name="save_pose_rate" value="-1.0" />
    <param name="use_map_topic" value="true" />

    <param name="laser_z_hit" value="0.5"/>
    <param name="laser_z_short" value="0.05"/>
    <param name="laser_z_rand" value="0.5"/>

    <param name="odom_alpha3" value="0.8"/>
    <param name="odom_alpha5" value="0.1"/>

  </node>

  <!-- Run the navigation control stack -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <rosparam file="$(find rodeobot)/launch/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find rodeobot)/launch/costmap_common_params_laser.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rodeobot)/launch/costmap_common_params_laser.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rodeobot)/launch/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rodeobot)/launch/global_costmap_params.yaml" command="load" />
  </node>

</launch>
