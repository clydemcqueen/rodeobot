<launch>

  <!-- Launch base controller -->
  <node name="driver" pkg="ca_driver" type="ca_driver" output="screen">
    <remap from="cmd_vel" to="smooth_cmd_vel" />
    <rosparam>
      loop_hz: 30
      dev: "/dev/ttyUSB0"
      publish_tf: true
      create_1: false
    </rosparam>
  </node>

